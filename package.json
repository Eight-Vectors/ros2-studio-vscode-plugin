{
  "name": "vscode-ros-extension",
  "displayName": "ROS 2 Plugin",
  "description": "Connect to ROS 2 systems via rosbridge, visualize topics, call services, and interact with ROS 2 nodes directly from VS Code",
  "version": "0.3.1",
  "publisher": "eightvectors",
  "icon": "media/industrial-robot.png",
  "galleryBanner": {
    "color": "#1e2327",
    "theme": "dark"
  },
  "homepage": "https://github.com/Eight-Vectors/vscode-ros-extension#readme",
  "bugs": {
    "url": "https://github.com/Eight-Vectors/vscode-ros-extension/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Eight-Vectors/vscode-ros-extension.git"
  },
  "keywords": [
    "ros",
    "ros2",
    "rosbridge",
    "robotics",
    "robot",
    "websocket",
    "visualization",
    "topics",
    "services",
    "nodes",
    "parameters",
    "debugging",
    "simulation",
    "telemetry",
    "sensor",
    "laser",
    "urdf",
    "occupancy-grid",
    "bag",
    "rosbag",
    "ros-bag",
    "publisher",
    "subscriber",
    "rosapi",
    "development",
    "middleware",
    "real-time",
    "point-cloud",
    "3d-visualization",
    "remote-control"
  ],
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Visualization",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-ros-extension.connect-bridge",
        "title": "Connect to Remote"
      },
      {
        "command": "vscode-ros-extension.disconnect-bridge",
        "title": "Disconnect",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "vscode-ros-extension.refresh-connections",
        "title": "Refresh connection",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-ros-extension.toggle-subscription",
        "title": "Subscribe"
      },
      {
        "command": "vscode-ros-extension.subscribe-to-topic",
        "title": "Subscribe"
      },
      {
        "command": "vscode-ros-extension.unsubscribe-from-topic",
        "title": "Unsubscribe"
      },
      {
        "command": "vscode-ros-extension.get-parameters",
        "title": "Get Parameters",
        "icon": "$(settings-gear)"
      },
      {
        "command": "vscode-ros-extension.reset-visualization-preference",
        "title": "Reset Visualization View Mode Preference"
      },
      {
        "command": "vscode-ros-extension.add-to-bag-recorder",
        "title": "Add to Bag Recorder",
        "icon": "$(record)"
      },
      {
        "command": "vscode-ros-extension.open-bag-recorder",
        "title": "Open ROS2 Bag Recorder",
        "icon": "$(record)"
      },
      {
        "command": "vscode-ros-extension.open-message-inspector",
        "title": "Open Message/Service Inspector",
        "icon": "$(symbol-interface)"
      },
      {
        "command": "vscode-ros-extension.inspect-topic-message",
        "title": "Inspect Message Type",
        "icon": "$(info)"
      },
      {
        "command": "vscode-ros-extension.inspect-topic-from-tree",
        "title": "Inspect",
        "icon": "$(info)"
      },
      {
        "command": "vscode-ros-extension.inspect-service-type",
        "title": "Inspect Service Type",
        "icon": "$(info)"
      },
      {
        "command": "vscode-ros-extension.inspect-action-type",
        "title": "Inspect Action Type",
        "icon": "$(info)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Extension Configuration",
      "properties": {
        "vscode-ros-extension.rosbridgeUrl": {
          "type": "string",
          "default": "ws://localhost:9090",
          "description": "Rosbridge WebSocket URL"
        },
        "vscode-ros-extension.remoteBagPath": {
          "type": "string",
          "default": "/home/ros/bags",
          "description": "Default directory path on the remote ROS 2 machine for saving bag files"
        },
        "vscode-ros-extension.messageThrottleRate": {
          "type": "number",
          "default": 100,
          "minimum": 0,
          "maximum": 1000,
          "description": "Minimum milliseconds between message updates (0 to disable throttling)"
        },
        "vscode-ros-extension.maxMessageBufferSize": {
          "type": "number",
          "default": 100,
          "minimum": 10,
          "maximum": 1000,
          "description": "Maximum number of messages to keep in buffer per topic"
        },
        "vscode-ros-extension.maxMessageDisplayLength": {
          "type": "number",
          "default": 2000,
          "minimum": 500,
          "maximum": 10000,
          "description": "Maximum characters to display for unknown message types"
        },
        "vscode-ros-extension.showFullDataForKnownTypes": {
          "type": "boolean",
          "default": true,
          "description": "Show full data arrays for known types like LaserScan ranges (may impact performance)"
        },
        "vscode-ros-extension.maxOutputLines": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 2000,
          "description": "Maximum lines to keep in output channel before clearing (prevents memory issues)"
        },
        "vscode-ros-extension.maxMessagesToRetain": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum number of messages to retain per topic (prevents memory issues for infrequent topics)"
        },
        "vscode-ros-extension.maxMemoryMB": {
          "type": "number",
          "default": 1,
          "minimum": 0.1,
          "maximum": 10,
          "description": "Maximum memory (in MB) allowed for message buffer per topic before trimming old messages"
        },
        "vscode-ros-extension.staticTopics": {
          "type": "array",
          "default": ["/robot_description", "/tf_static", "/map_metadata", "/map"],
          "description": "List of topic names that are considered static (publish once or rarely)",
          "items": {
            "type": "string"
          }
        },
        "vscode-ros-extension.staticTopicPatterns": {
          "type": "array",
          "default": [".*_static$", ".*_description$", ".*_metadata$"],
          "description": "Regular expression patterns to match static topic names",
          "items": {
            "type": "string"
          }
        },
        "vscode-ros-extension.staticMessageTypes": {
          "type": "array",
          "default": [".*Parameter.*", ".*Description.*"],
          "description": "Regular expression patterns to match static message types",
          "items": {
            "type": "string"
          }
        },
        "vscode-ros-extension.staticTopicAutoDetectRate": {
          "type": "number",
          "default": 0.1,
          "minimum": 0.01,
          "maximum": 10,
          "description": "Message rate threshold (messages per second) below which topics are auto-detected as static"
        }
      }
    },
    "keybindings": [],
    "viewsWelcome": [
      {
        "view": "extNodesView",
        "contents": "[Connect](command:vscode-ros-extension.connect-bridge)"
      },
      {
        "view": "extNodeListView",
        "contents": "[Connect](command:vscode-ros-extension.connect-bridge)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "extContainerView",
          "title": "ROS 2 Plugin",
          "icon": "media/industrial-robot.svg"
        }
      ]
    },
    "views": {
      "extContainerView": [
        {
          "id": "extNodesView",
          "name": "ROS 2 Topics",
          "icon": "media/industrial-robot.svg"
        },
        {
          "id": "extNodeListView",
          "name": "ROS 2 Nodes",
          "icon": "media/industrial-robot.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vscode-ros-extension.disconnect-bridge",
          "when": "view == extNodesView && vscode-ros-extension.isConnected",
          "group": "navigation@1"
        },
        {
          "command": "vscode-ros-extension.refresh-connections",
          "when": "view == extNodesView && vscode-ros-extension.isConnected",
          "group": "navigation@2"
        },
        {
          "command": "vscode-ros-extension.open-bag-recorder",
          "when": "view == extNodesView && vscode-ros-extension.isConnected",
          "group": "navigation@3"
        },
        {
          "command": "vscode-ros-extension.open-message-inspector",
          "when": "view == extNodesView && vscode-ros-extension.isConnected",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "vscode-ros-extension.disconnect-bridge",
          "when": "view == extNodesView && viewItem == nodeTree"
        },
        {
          "command": "vscode-ros-extension.add-to-bag-recorder",
          "when": "view == extNodesView && viewItem == topic"
        },
        {
          "command": "vscode-ros-extension.subscribe-to-topic",
          "when": "view == extNodesView && viewItem == topic",
          "group": "inline@1"
        },
        {
          "command": "vscode-ros-extension.unsubscribe-from-topic",
          "when": "view == extNodesView && viewItem == topicSubscribed",
          "group": "inline@1"
        },
        {
          "command": "vscode-ros-extension.inspect-topic-from-tree",
          "when": "view == extNodesView && viewItem == topic",
          "group": "inline@10"
        },
        {
          "command": "vscode-ros-extension.inspect-topic-from-tree",
          "when": "view == extNodesView && viewItem == topicSubscribed",
          "group": "inline@10"
        },
        {
          "command": "vscode-ros-extension.inspect-topic-message",
          "when": "view == extNodesView && viewItem == topic"
        },
        {
          "command": "vscode-ros-extension.inspect-service-type",
          "when": "view == extNodesView && viewItem == service",
          "group": "inline"
        },
        {
          "command": "vscode-ros-extension.inspect-action-type",
          "when": "view == extNodesView && viewItem == actionClient",
          "group": "inline"
        },
        {
          "command": "vscode-ros-extension.get-parameters",
          "when": "view == extNodeListView && viewItem == node"
        },
        {
          "command": "vscode-ros-extension.inspect-topic-message",
          "when": "view == extNodeListView && viewItem == publisher",
          "group": "inline"
        },
        {
          "command": "vscode-ros-extension.inspect-topic-message",
          "when": "view == extNodeListView && viewItem == subscribers",
          "group": "inline"
        },
        {
          "command": "vscode-ros-extension.inspect-service-type",
          "when": "view == extNodeListView && viewItem == service",
          "group": "inline"
        },
        {
          "command": "vscode-ros-extension.inspect-action-type",
          "when": "view == extNodeListView && viewItem == actionClient",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint .",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "copy-webpack-plugin": "^13.0.0",
    "eslint": "^9.9.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "roslib": "^1.4.1"
  }
}
