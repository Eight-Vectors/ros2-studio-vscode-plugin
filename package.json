{
  "name": "vscode-ros-extension",
  "displayName": "vscode-ros-extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-ros-extension.connect-bridge",
        "title": "Connect to Remote"
      },
      {
        "command": "vscode-ros-extension.disconnect-bridge",
        "title": "Disconnect"
      },
      {
        "command": "vscode-ros-extension.refresh-connections",
        "title": "Refresh connection",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-ros-extension.toggle-subscription",
        "title": "Subscribe"
      },
      {
        "command": "vscode-ros-extension.create-subscriber",
        "title": "Create subscription"
      },
      {
        "command": "vscode-ros-extension.publish-subscriber",
        "title": "Run subscription"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Extension Configuration",
      "properties": {
        "vscode-ros-extension.tcpPort": {
          "type": "string",
          "default": "7447",
          "description": "Tcp port for dds connections"
        },
        "vscode-ros-extension.httpPort": {
          "type": "string",
          "default": "8000",
          "description": "Http port for dds connections"
        },
        "vscode-ros-extension.websocketPort": {
          "type": "string",
          "default": "5001",
          "description": "Websocket port for socket connections"
        }
      }
    },
    "keybindings": [
      {
        "command": "vscode-ros-extension.publish-subscriber",
        "key": "ctrl+shift+k",
        "when": "editorTextFocus"
      }
    ],
    "viewsWelcome": [
      {
        "view": "extNodesView",
        "contents": "[Connect](command:vscode-ros-extension.connect-bridge)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "extContainerView",
          "title": "Extension View Container",
          "icon": "media/industrial-robot.svg"
        }
      ]
    },
    "views": {
      "extContainerView": [
        {
          "id": "extNodesView",
          "name": "List of avaiable nodes from bridge"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vscode-ros-extension.refresh-connections",
          "when": "view == extNodesView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vscode-ros-extension.toggle-subscription",
          "when": "view == extNodesView && viewItem == publisher"
        },
        {
          "command": "vscode-ros-extension.create-subscriber",
          "when": "view == extNodesView && viewItem == publisher"
        },
        {
          "command": "vscode-ros-extension.disconnect-bridge",
          "when": "view == extNodesView && viewItem == nodeTree"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "socket.io-client": "^4.7.5"
  }
}