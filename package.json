{
  "name": "vscode-ros-extension",
  "displayName": "ROS Bridge Extension",
  "description": "Connect to ROS systems via rosbridge, visualize topics, call services, and interact with ROS nodes directly from VS Code",
  "version": "0.0.2",
  "publisher": "YOUR-PUBLISHER-ID",
  "icon": "media/industrial-robot.png",
  "galleryBanner": {
    "color": "#1e2327",
    "theme": "dark"
  },
  "homepage": "https://github.com/Eight-Vectors/vscode-ros-extension#readme",
  "bugs": {
    "url": "https://github.com/Eight-Vectors/vscode-ros-extension/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Eight-Vectors/vscode-ros-extension.git"
  },
  "keywords": [
    "ros",
    "ros2",
    "rosbridge",
    "robotics",
    "robot",
    "websocket",
    "visualization",
    "topics",
    "services",
    "nodes",
    "parameters",
    "debugging",
    "simulation",
    "telemetry",
    "sensor",
    "laser",
    "urdf",
    "occupancy-grid",
    "bag",
    "rosbag",
    "ros-bag",
    "publisher",
    "subscriber",
    "rosapi",
    "development",
    "middleware",
    "real-time",
    "point-cloud",
    "3d-visualization",
    "remote-control"
  ],
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Visualization",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-ros-extension.connect-bridge",
        "title": "Connect to Remote"
      },
      {
        "command": "vscode-ros-extension.disconnect-bridge",
        "title": "Disconnect",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "vscode-ros-extension.refresh-connections",
        "title": "Refresh connection",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-ros-extension.toggle-subscription",
        "title": "Subscribe"
      },
      {
        "command": "vscode-ros-extension.get-parameters",
        "title": "Get Parameters",
        "icon": "$(settings-gear)"
      },
      {
        "command": "vscode-ros-extension.reset-visualization-preference",
        "title": "Reset Visualization View Mode Preference"
      },
      {
        "command": "vscode-ros-extension.add-to-bag-recorder",
        "title": "Add to Bag Recorder",
        "icon": "$(record)"
      },
      {
        "command": "vscode-ros-extension.open-bag-recorder",
        "title": "Open ROS2 Bag Recorder",
        "icon": "$(record)"
      },
      {
        "command": "vscode-ros-extension.open-message-inspector",
        "title": "Open Message/Service Inspector",
        "icon": "$(symbol-interface)"
      },
      {
        "command": "vscode-ros-extension.inspect-topic-message",
        "title": "Inspect Message Type",
        "icon": "$(info)"
      },
      {
        "command": "vscode-ros-extension.inspect-service-type",
        "title": "Inspect Service Type",
        "icon": "$(info)"
      },
      {
        "command": "vscode-ros-extension.inspect-action-type",
        "title": "Inspect Action Type",
        "icon": "$(info)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Extension Configuration",
      "properties": {
        "vscode-ros-extension.rosbridgeUrl": {
          "type": "string",
          "default": "ws://localhost:9090",
          "description": "Rosbridge WebSocket URL"
        },
        "vscode-ros-extension.remoteBagPath": {
          "type": "string",
          "default": "/home/ros/bags",
          "description": "Default directory path on the remote ROS machine for saving bag files"
        }
      }
    },
    "keybindings": [],
    "viewsWelcome": [
      {
        "view": "extNodesView",
        "contents": "[Connect](command:vscode-ros-extension.connect-bridge)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "extContainerView",
          "title": "ROS Nodes",
          "icon": "media/industrial-robot.svg"
        }
      ]
    },
    "views": {
      "extContainerView": [
        {
          "id": "extNodesView",
          "name": "ROS Nodes",
          "icon": "media/industrial-robot.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vscode-ros-extension.disconnect-bridge",
          "when": "view == extNodesView && vscode-ros-extension.isConnected",
          "group": "navigation@1"
        },
        {
          "command": "vscode-ros-extension.refresh-connections",
          "when": "view == extNodesView && vscode-ros-extension.isConnected",
          "group": "navigation@2"
        },
        {
          "command": "vscode-ros-extension.open-bag-recorder",
          "when": "view == extNodesView && vscode-ros-extension.isConnected",
          "group": "navigation@3"
        },
        {
          "command": "vscode-ros-extension.open-message-inspector",
          "when": "view == extNodesView && vscode-ros-extension.isConnected",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "vscode-ros-extension.toggle-subscription",
          "when": "view == extNodesView && viewItem == publisher"
        },
        {
          "command": "vscode-ros-extension.disconnect-bridge",
          "when": "view == extNodesView && viewItem == nodeTree"
        },
        {
          "command": "vscode-ros-extension.get-parameters",
          "when": "view == extNodesView && viewItem == node"
        },
        {
          "command": "vscode-ros-extension.add-to-bag-recorder",
          "when": "view == extNodesView && (viewItem == publisher || viewItem == subscribers)"
        },
        {
          "command": "vscode-ros-extension.inspect-topic-message",
          "when": "view == extNodesView && (viewItem == publisher || viewItem == subscribers)",
          "group": "inline"
        },
        {
          "command": "vscode-ros-extension.inspect-service-type",
          "when": "view == extNodesView && viewItem == service",
          "group": "inline"
        },
        {
          "command": "vscode-ros-extension.inspect-action-type",
          "when": "view == extNodesView && viewItem == actionClient",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint .",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "roslib": "^1.4.1"
  }
}
